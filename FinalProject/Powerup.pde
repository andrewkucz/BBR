  // Powerup types (state definitions)
  // 0 - Nothing/null
  // 1 - Longer paddle
  // 2 - Faster paddle
  // 3 - Galaga mode
  // 4 - Multi-ball
  // 5 - Fireball 

  color outline = color(0);


  Powerup(int x, int y)
  {
    super();
    w = 14;
    h = 14;
    xpos = x;
    ypos = y;
    yvel = 0;
    col = color(255);

    state = weighting[(int)random(weighting.length)];
  }


  void update()
  {
      strokeWeight(3);
      stroke(outline);
      fill(col);
      ellipse(xpos, ypos, w, h);
      ypos += yvel;
  }
  
  void checkCollisions(GameBoard b, Paddle p)
  {
    if(ypos > p.ypos && xpos > p.xpos && xpos < p.xpos+p.w)
    {
      if(p.getState() == state)
      {
        p.counter = 0;
      }
      else
      {
        p.setState(state);
      }
      
      state = 0;
    }
    else if(ypos+h/2 > b.h)
    {
      state = 0;
    } 
  }
  
  
  
