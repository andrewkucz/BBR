  // Powerup types
  // 0 - Nothing/null
  // 1 - Longer paddle
  // 2 - Faster paddle
  // 3 - Galaga mode
  // 4 - Multi-ball
  // 5 - Fireball 
  
  color col = color(255);
  color outline = color(0);
  int size = 14;
  int xpos, ypos;
  float yvel;

  
  Powerup()
  {
    type = 0;
    yvel = 0;
  }
  
  Powerup(int x, int y)
  {
    xpos = x;
    ypos = y;
    yvel = 0;
    
    type = weighting[(int)random(weighting.length)];
    
  }
  
  
  void update()
  {
    if(type>0)
    {
    strokeWeight(3);
    stroke(outline);
    fill(col);
    ellipse(xpos,ypos,size,size);
    }
    
    ypos += yvel;
  }
  
  
  
  
    
  
  
  
  
  
  
